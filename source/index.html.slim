  const BASE_URL = "#{ENV['API_URL']}"

  function callApi(endpoint, options) {
    const DEFAULT_OPTIONS = {
      method: "GET",
      credentials:"include"
    }
    
    return new Promise((resolve, reject) => {
      fetch(`${BASE_URL}${endpoint}`, Object.assign(DEFAULT_OPTIONS, options))
        .then(response => resolve(response.json()))
        .catch(error => reject(error)) //this is only triggered on network error or the likes
    })
  }

  function errorHandler(result){
    if (result.object == "error"){     
      $('#error-msg').text(result.message) 
      return true;
    }
    return false;
  }

  function fetchError(error){
    error == "TypeError: Failed to fetch"? alert("Connection Problem"): alert(error);
  }
  

  function checkLogged() {
    $('#error-msg').text("");

    callApi("users/logged").then(result => {      
      if (result.status == "success") {      
         $("#h-live").attr("href","javascript:getKeys()");        
         setStep(2); 
      }
      else
      {
        setStep(1)
      }
      

    }).catch(error => {
      console.log(error);
      fetchError(error);
    })    
  
  }  

  function registerData() {
    $('#error-msg').text(""); 

    callApi("users/register", {
      method: "POST",
      body: new FormData(registerForm)
    }).then(result => {
      if (errorHandler(result) == false) {
          $("#h-live").attr("href","javascript:getKeys()"),        
          setStep(2);  
      }         
    }).catch(error => {
      fetchError(error);      
    })
  }
 
