  function cgnData() {
      $('#error-msg').text("");     
      callApi("users/upload/cgn", {
        method: "POST",
        body: new FormData(cgnForm),
       
      }).then(result => {
        if (errorHandler(result) == false){           
          $("p#pk-field").text(result.data);
          $("key#pk-pk").text(result.data);       
          setStep(3);         
        }
        
      }).catch(error => {
        // Failure
        fetchError(error);
        
      })
  }  
  var cgnForm = document.getElementById("cgn-form");
  cgnForm.addEventListener("submit", function (event) {    
    event.preventDefault();
    cgnData();
  });

  
  function getKeys() {
    $('#error-msg').text("");  
    
    callApi("users/keys", {
      method: "GET",      
    }).then(result => {       
        if (errorHandler(result) == false){         
          $("p#pk-field").text("");
          for (i = 0; i < result.data.length; i++) {            
              $("p#pk-field").append('<p>'+ result.data[i].alias +'<\p>' +            
                                    '<p>'+ result.data[i].public_key +'<\p><hr>');
          }     
           $("key#pk-pk").text(result.data[result.data.length-1].public_key);
          setStep(3);  
        }

    }).catch(error => {
      console.log(error)
        fetchError(error);
        
    })    

   
  }

  
