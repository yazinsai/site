  function setStep(stepNum) {
    
    const steps = document.querySelectorAll(".step")
    const pages = document.querySelectorAll(".page")    
   
    
    for (i = 1; i <= steps.length; i++) {
      i == stepNum ?
        (steps[i-1].classList.add('active'),pages[i-1].classList.add('active')) :        
        (steps[i-1].classList.remove('active'), pages[i-1].classList.remove('active'))
    }

  //login
    if(stepNum == 1.1 ) 
    {
      steps[0].classList.add('active');
      steps[0].innerHTML='Login';
      document.getElementById("modal-body-login").classList.add("active")
      }
      else{
      document.getElementById("modal-body-login").classList.remove("active");
      steps[0].innerHTML='Register';
      }       
        
    $('#startModal').modal('show');
    
  }

